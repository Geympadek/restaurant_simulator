{
	"version": "2.0.0",
	"tasks": [
        {
			"label": "Build with MSBuild",
            "type": "shell",
            "command": "msbuild",
            "args": [
                "${workspaceFolder}\\build\\restaurant_simulator.vcxproj",
                "/t:Build",
                "/p:Configuration=Debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "clear": true
            },
            "problemMatcher": "$msCompile"
		}
	]
}